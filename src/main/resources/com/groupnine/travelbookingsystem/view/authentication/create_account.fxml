<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.collections.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupnine.travelbookingsystem.controller.LoginController">
   <children>
      <!-- Left Logo -->
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="44.0" layoutY="165.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Assets/imgs/logo.png" />
         </image>
      </ImageView>
      <!-- Right Login Form -->
      <AnchorPane layoutX="279.0" layoutY="-1.0" prefHeight="500.0" prefWidth="323.0" stylesheets="@../../Assets/css/authStyle.css">
         <children>
            <ImageView fitHeight="450.0" fitWidth="280.0" layoutX="23.0" layoutY="21.0" pickOnBounds="true">
               <image>
                  <Image url="@../../Assets/imgs/login_form_frame.png" />
               </image>
            </ImageView>
            <!-- Login Title -->
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="23.0" layoutY="42.0" prefHeight="63.0" prefWidth="277.0" text="New Account" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="34.0" />
               </font>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="23.0" layoutY="96.0" prefHeight="35.0" prefWidth="278.0" text="Create a new account" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Poppins Regular" size="12.0" />
               </font>
            </Label>
            <!--<Label layoutX="23.0" layoutY="47.0" styleClass="login-label" text="Login" />
            <Label layoutX="21.0" layoutY="101.0" styleClass="description-label" text="Please login to continue to your account." />-->

            <!-- Email Field -->
            <TextField fx:id="usernameTextField" layoutX="71.0" layoutY="145.0" promptText="Your name" styleClass="text-field-custom" />
            <TextField fx:id="usernameTextField1" layoutX="71.0" layoutY="180.0" promptText="your@email.com" styleClass="text-field-custom" />
            <TextField fx:id="usernameTextField11" layoutX="71.0" layoutY="215.0" promptText="Phone Number" styleClass="text-field-custom" />
            <TextField fx:id="usernameTextField111" layoutX="71.0" layoutY="250.0" promptText="Address" styleClass="text-field-custom" />
            <ComboBox fx:id="userRoleComboBox" layoutX="71.0" layoutY="285.0" prefHeight="30.4" prefWidth="200.0" promptText="Select Role" styleClass="drop-down-custom">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Agent" />
                     <String fx:value="Admin" />
                  </FXCollections>
               </items>
            </ComboBox>

            <Group layoutX="71.0" layoutY="320.0">
               <children>
      
                  <!-- Password Field with Toggle -->
                  <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field-custom" />
                  <TextField fx:id="passwordTextField" promptText="Password" styleClass="text-field-custom" visible="false" />
                  <Button id="togglePasswordButton" fx:id="passwordToggleButton" layoutX="168.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent;" stylesheets="@../../Assets/css/authStyle.css">
                     <graphic>
                        <ImageView fx:id="passwordToggleIcon" fitHeight="15.0" fitWidth="15.0">
                           <image>
                              <Image url="@../../Assets/imgs/show-password-logo.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </Group>
            <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="28.0" layoutY="360.0" prefHeight="35.0" prefWidth="278.0" text="Error: Email and password are required!" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font name="Poppins Bold" size="12.0" />
               </font>
            </Label>

            <!-- Login Button -->
            <Button defaultButton="true" layoutX="71.0" layoutY="400.0" onAction="#onLoginButtonClick" prefHeight="30.0" prefWidth="200.0" styleClass="button-main" stylesheets="@../../Assets/css/authStyle.css" text="Crerate account" />
         </children>
      </AnchorPane>
      <Label fx:id="statusLabel" layoutX="21.0" layoutY="450.0" text="Connecting to database..." textFill="#acacac">
         <font>
            <Font name="Poppins Regular" size="14.0" />
         </font>
      </Label>
   </children>
   <stylesheets>
      <URL value="@../../Assets/css/authStyle.css" />
   </stylesheets>
</AnchorPane>
