<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupnine.travelbookingsystem.controller.LoginController">
   <children>
      <!-- Left Logo -->
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="44.0" layoutY="125.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../Assets/imgs/logo.png" />
         </image>
      </ImageView>

      <!-- Right Login Form -->
      <AnchorPane layoutX="279.0" layoutY="-1.0" prefHeight="400.0" prefWidth="323.0" stylesheets="@../../Assets/css/loginStyle.css">
         <children>
            <Group layoutX="23.0" layoutY="21.0">
               <children>
                  <ImageView fitHeight="359.0" fitWidth="286.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Assets/imgs/login_form_frame.png" />
                     </image>
                  </ImageView>
                  <!-- Login Title -->
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutY="21.0" prefHeight="63.0" prefWidth="277.0" text="Login" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Poppins Bold" size="34.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutY="75.0" prefHeight="35.0" prefWidth="278.0" text="Please login to continue to your account." textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="12.0" />
                     </font>
                  </Label>
                  <!--<Label layoutX="23.0" layoutY="47.0" styleClass="login-label" text="Login" />
                  <Label layoutX="21.0" layoutY="101.0" styleClass="description-label" text="Please login to continue to your account." />-->
      
                  <!-- Email Field -->
                  <TextField fx:id="usernameTextField" layoutX="48.0" layoutY="124.0" promptText="Email or Username" styleClass="text-field" />
      
                  <!-- Password Field with Toggle -->
                  <PasswordField fx:id="passwordField" layoutX="48.0" layoutY="164.0" promptText="Password" styleClass="password-field" />
                  <TextField fx:id="passwordTextField" layoutX="48.0" layoutY="164.0" promptText="Password" styleClass="text-field" visible="false" />
                  <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="5.0" layoutY="194.0" prefHeight="35.0" prefWidth="278.0" text="Error: Email and password are required!" textAlignment="CENTER" textFill="RED">
                     <font>
                        <Font name="Poppins Bold" size="12.0" />
                     </font>
                  </Label>
      
                  <!-- Login Button -->
                  <Button defaultButton="true" layoutX="48.0" layoutY="230.0" onAction="#onLoginButtonClick" prefHeight="30.0" prefWidth="200.0" styleClass="button-login" stylesheets="@../../Assets/css/loginStyle.css" text="Login" />
                  <Button layoutX="41.0" layoutY="290.0" styleClass="button-forgot" text="Forget Password?" />
                  <Button id="togglePasswordButton" fx:id="passwordToggleButton" layoutX="216.0" layoutY="164.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: transparent;" stylesheets="@../../Assets/css/loginStyle.css">
                     <graphic>
                        <ImageView fx:id="passwordToggleIcon" fitHeight="15.0" fitWidth="15.0">
                           <image>
                              <Image url="@../../Assets/imgs/show-password-logo.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </Group>
         </children>
      </AnchorPane>
      <Label fx:id="statusLabel" layoutX="21.0" layoutY="361.0" text="Connecting to database..." textFill="#acacac">
         <font>
            <Font name="Poppins Regular" size="14.0" />
         </font>
      </Label>
   </children>
   <stylesheets>
      <URL value="@../../Assets/css/loginStyle.css" />
   </stylesheets>
</AnchorPane>
