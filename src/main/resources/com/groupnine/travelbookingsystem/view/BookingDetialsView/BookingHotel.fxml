<AnchorPane prefHeight="360.0" prefWidth="560.0" style="-fx-border-radius: 0; -fx-border-color: #334C68; -fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupnine.travelbookingsystem.controller.BookingDetailsController.HotelController">
   <children>
      <!-- Customer Name -->
      <TextField fx:id="customerNameField" layoutX="21.0" layoutY="55.0" prefHeight="30.0" prefWidth="230.0" promptText="Enter customer name" style="-fx-border-color: #336C68;" />
      <Label layoutX="21.0" layoutY="30.0" text="Customer Name" textFill="#336c68" />

      <!-- Hotel Name -->
      <TextField fx:id="hotelNameField" layoutX="284.0" layoutY="55.0" prefHeight="30.0" prefWidth="230.0" promptText="Enter hotel name" style="-fx-border-color: #336C68;" />
      <Label layoutX="284.0" layoutY="30.0" text="Hotel Name" textFill="#336c68" />

      <!-- Booking Date -->
      <DatePicker fx:id="bookingDatePicker" layoutX="21.0" layoutY="125.0" prefHeight="30.0" prefWidth="230.0" promptText="Select booking date" style="-fx-border-color: #336C68;" />
      <Label layoutX="21.0" layoutY="100.0" text="Booking Date" textFill="#336c68" />

      <!-- Check-in Date -->
      <DatePicker fx:id="checkInDatePicker" layoutX="284.0" layoutY="125.0" prefHeight="30.0" prefWidth="230.0" promptText="Select check-in date" style="-fx-border-color: #336C68;" />
      <Label layoutX="284.0" layoutY="100.0" text="Check-in Date" textFill="#336c68" />

      <!-- Check-out Date -->
      <DatePicker fx:id="checkOutDatePicker" layoutX="21.0" layoutY="195.0" prefHeight="30.0" prefWidth="230.0" promptText="Select check-out date" style="-fx-border-color: #336C68;" />
      <Label layoutX="21.0" layoutY="170.0" text="Check-out Date" textFill="#336c68" />

      <!-- Status -->
      <ComboBox fx:id="statusComboBox" layoutX="284.0" layoutY="195.0" prefHeight="30.0" prefWidth="230.0" style="-fx-border-color: #336C68;">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Pending" />
               <String fx:value="Confirmed" />
               <String fx:value="Cancelled" />
            </FXCollections>
         </items>
      </ComboBox>
      <Label layoutX="284.0" layoutY="170.0" text="Booking Status" textFill="#336c68" />

      <!-- Booking Button -->
      <Button fx:id="bookingButton" layoutX="183.0" layoutY="273.0" mnemonicParsing="false" onAction="#onBookingButtonClick" prefHeight="38.0" prefWidth="174.0" style="-fx-font-weight: bold; -fx-background-color: #334C68; -fx-background-radius: 20;" text="Book Now" textFill="#fffefe" />
   </children>
</AnchorPane>


