<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" prefHeight="470.0" prefWidth="250" style="-fx-background-color: #CCD2D9;" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupnine.travelbookingsystem.controller.SidebarController.SidebarController">
    <center>
        <VBox alignment="CENTER" prefHeight="150.0" prefWidth="250.0" spacing="5" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../../../img/Sidebar/img3.png" />
                </image>
            </ImageView>

            <Label text="FlyStay" textFill="#334c68">
                <font>
                    <Font name="Arial Bold" size="24.0" />
                </font>
            </Label>
        </VBox>

    </center>
   <bottom>

        <VBox alignment="CENTER_LEFT" prefHeight="320.0" prefWidth="250.0" spacing="20" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5;" onMouseClicked="#handleHomeClick">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <Image url="@../../../../../img/Sidebar/House.png" />
                </ImageView>
                <Label style="-fx-font-size: 16px; -fx-text-fill: #334C68;" text="Home" />
            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5;">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <Image url="@../../../../../img/Sidebar/AirplaneInFlight.png" />
                </ImageView>
                <Label style="-fx-font-size: 16px; -fx-text-fill: #334C68;" text="Flights/Hotels" />
            </HBox>

            <HBox fx:id="dashboardBox" alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5;"  onMouseClicked="#handleDashboardClick">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <Image url="@../../../../../img/Sidebar/Notepad.png" />
                </ImageView>
                <Label style="-fx-font-size: 16px; -fx-text-fill: #334C68;" text="Dashboard" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 5;">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <Image url="@../../../../../img/Sidebar/SignOut.png" />
                </ImageView>
                <Label style="-fx-font-size: 16px; -fx-text-fill: #334C68;" text="Logout" />
            </HBox>
        </VBox>
   </bottom>
</BorderPane>