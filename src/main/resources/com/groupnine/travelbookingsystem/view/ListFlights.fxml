<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupnine.travelbookingsystem.controller.ListOfFlightsController">
    <children>
        <!-- جدول الرحلات -->
        <TableView fx:id="flightTable" prefHeight="720.0" prefWidth="1280.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="240.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
            <columns>
                <TableColumn text="Flight ID" />
                <TableColumn text="Origin" />
                <TableColumn text="Destination" />
                <TableColumn text="Departure Date" />
                <TableColumn text="Arrival Date" />
                <TableColumn text="Departure Time" />
                <TableColumn text="Arrival Time" />
                <TableColumn text="Gate Number" />
                <TableColumn text="Flight Duration" />
                <TableColumn text="Seat Capacity" />
                <TableColumn text="Class Types" />
                <TableColumn text="Notes" />
                <TableColumn text="Price" />
                <TableColumn text="Delete" />
                <TableColumn text="Edit" />
            </columns>
        </TableView>

        <!-- القائمة الجانبية -->
        <AnchorPane prefWidth="237.0" style="-fx-background-color: #334C6840;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <!-- يمكن إضافة أزرار هنا -->
        </AnchorPane>

        <!-- زر "Hotels" -->
        <Button fx:id="hotel" mnemonicParsing="false" style="-fx-background-color: #334C6840;" text="Hotels" AnchorPane.leftAnchor="317.0" AnchorPane.topAnchor="63.0" />

        <!-- زر "Flights" -->
        <Button fx:id="flight" mnemonicParsing="false" style="-fx-background-color: #385A7F;" text="Flights" textFill="WHITE" AnchorPane.leftAnchor="266.0" AnchorPane.topAnchor="63.0" />

        <!-- العنوان -->
        <Label text="List Of Flights:" AnchorPane.leftAnchor="240.0" AnchorPane.topAnchor="14.0">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- زر "Add" -->
        <Button fx:id="addnewflight" mnemonicParsing="false" prefHeight="25.0" prefWidth="61.0" style="-fx-background-color: #385A7F;" text="Add" textFill="WHITE" AnchorPane.rightAnchor="32.0" AnchorPane.topAnchor="63.0" />
    </children>
</AnchorPane>
